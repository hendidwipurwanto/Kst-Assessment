@model DTO.ViewModels.SorterNameViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Result Page</h1>

<hr />
<div class="container">
    <div class="row">
       
        <div class="col-md-4">
            <div class="form-group">
                <label for="exampleInputPassword1">Before Sort!</label>
                <textarea asp-for="FullNameBeforeSort" rows="40" cols="35"></textarea>
            </div>

            
        </div>
      
        <div class="col-md-4">

            <div class="form-group">
                <label for="exampleInputPassword1">After Sort!</label>
                <textarea asp-for="FullNameAfterSort" rows="40" cols="35"></textarea>
            </div>
        </div>
        <div class="col-md-4">
            <ul class="list-group">
                @foreach (var file in Model.FileViewModelList)
                {
                <li class="list-group-item">@Html.ActionLink("Download File after sorted!", "DownloadFile", new { fileName = file.FileName })</li>
                }
            </ul>
        </div>
    </div>

</div>


